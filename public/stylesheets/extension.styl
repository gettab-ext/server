@font-face {
    font-family: montserratbold;
    src: url(../fonts/montserrat-bold-webfont.woff2) format('woff2'), url(../fonts/montserrat-bold-webfont.woff) format('woff');
    font-weight: 400;
    font-style: normal
}

@font-face {
    font-family: montserratregular;
    src: url(../fonts/montserrat-regular-webfont.woff2) format('woff2'), url(../fonts/montserrat-regular-webfont.woff) format('woff');
    font-weight: 400;
    font-style: normal
}

.bg {
    background-image: url('http://gettab1.site/wp/wp.png');
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-size: cover;

    &:after {
        content: ''
        background-color rgba(0,0,0,0.4)
        position absolute
        display block
        width 100%
        height 100%
    }
}

.title {
    font-family: montserratregular;
    position: absolute;
    color: white;
    padding-left: 15%;
    padding-right: 15%;
    width: 100%;
    box-sizing: border-box;
    text-align: center;
    top: 25%;
    font-size: 56px;
    line-height: 72px;
}

.bottom-wrapper {
    position absolute
    bottom: 15%
    width 100%
}

.install-title {
    color: white;
    font-family: montserratregular;
    width: 100%;
    text-align: center;
    font-size: 22px;
    margin-bottom: 24px;
}

.install-button-wrapper {
    width 100%;
    text-align: center;
}

.install-button {
    margin: auto;
    display: inline-block;
    white-space: nowrap;
    color: white;
    font-family: montserratregular;
    background-color: rgb(83,132,217);
    padding: 24px 32px;
    padding-left: 68px;
    border-radius: 3px;
    text-decoration: none;
    transition: background-color 0.2s ease-out;
    position: relative;

    &:hover {
        background-color: lighten(rgb(83,132,217), 5)
    }

    &:before {
        content: ''
        position: absolute;
        display: inline-block;
        width: 30px;
        height: 30px;
        background-size: 30px;
        top: 18px;
        left: 22px;
        background-image: url('data:image/svg+xml;base64,')
    }
}